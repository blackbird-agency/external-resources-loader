<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block name="blackbird.external.resources.loader"
                   template="Blackbird_ExternalResourcesLoader::external_resources_loader.phtml">
                <arguments>
                    <argument name="nonceProvider" xsi:type="object">Blackbird\ExternalResourcesLoader\ViewModel\NonceProvider</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
